# standart rules for Kotlin

# Main Settings
[*.{kt,kts}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Rules for Compose
[*.{kt,kts}]
ktlint_indent_size = 4
ktlint_max_line_length = 120

# Rules for Ktlint
[*.{kt,kts}]
ktlint_indent_size = 4
ktlint_max_line_length = 120

